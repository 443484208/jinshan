/* pages/integral/integral.wxss */
.integral-bk {
  width: 100%;
  height: 276rpx;
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
}

.integral-header {
  width: 100%;
  padding: 66rpx 30rpx 0 70rpx;
  box-sizing: border-box;
  height: 276rpx;
}

.integral-header-h1 {
  color: #FFFFFF;
  font-size: 30rpx;
}

.integral-header-h2 {
  font-size: 76rpx;
  color: #FFFFFF;
}

.integral-header-h3 {
  padding: 20rpx 56rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  background: #689FFF;
  border-radius: 56rpx;
}

.integral-center {
  background: white;
  width: calc(100% - 60rpx);
  margin: -40rpx 30rpx 0 30rpx;
  padding: 40rpx 0  60rpx 0;
  border-radius: 22.5px 22.5px 0 0;
}

.integral-choice {
  margin: 0 110rpx;
}
page{
  background: #f8f6f9;
}

.integral-choice-view {
  font-size: 31rpx;
  padding-bottom: 27rpx;
}

.integral-choice-active {
  color: #2272FF;
  border-bottom: 4rpx solid #2272FF;
}
.integral-list{
padding: 30rpx  ;
border-bottom: 1px solid #EFEFEF;
width: 100%;
box-sizing: border-box;

}
.integral-list-h1{
font-size: 27rpx;
color: #333333;
width: 100%;
margin-bottom: 20rpx;
}
.integral-list-h2{
  width: 100%;
  font-size: 24rpx;
  color: #888888;
}

.integral-list-h3{
font-size: 27rpx;
color: #FD1200;
