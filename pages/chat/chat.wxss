/* pages/chat/chat.wxss */
.chat-footer{
  padding: 20rpx 30rpx;
  background: white;
  position: fixed;
  bottom: 0;
  left: 0;
  width: calc(100% - 60rpx);
}
.chat-footer-input{
width: calc(100% - 30rpx);
padding-left: 30rpx;
height: 70rpx;
border: 1px #DADADA solid;
}
.chat-footer-icon{
  width: 50rpx;
  margin-left: 25rpx;
  height: 50rpx;
}
page{
  background: #f5f5f5;
  margin-bottom: 120rpx;
}
.chat-kf{
  margin:25rpx 60rpx;
  display: flex;
  align-items: flex-start;
}
.chat-user{
  width: calc(100% - 120rpx);
  margin:25rpx 60rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
}
.chat-kf-icon{
  width: 86rpx;
  height: 86rpx;
  margin-right: 20rpx;
}
.chat-kf-view{
  padding: 36rpx 24rpx;
  background: white;
  max-width: 480rpx;
  font-size: 24rpx;
  border-radius: 0 25px 25px 25px;

}
.chat-user-icon{
  width: 86rpx;
  height: 86rpx;
  margin-left: 20rpx;
}
.chat-user-view{
  padding: 36rpx 24rpx;
  background: #DDDDDD;
  max-width: 480rpx;
  font-size: 24rpx;
  border-radius: 25px 0 25px 25px;
}